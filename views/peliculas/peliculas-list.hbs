<main>

  {{#if hasMovies}}

    <h1>movies list</h1>

    <div class="row">
      {{#each movies}}

        <div class="col-md-4">
          <div class="card">
            <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.title}}" />
            <div class="card-body">
              <h5 class="card-title">{{this.title}} - ${{this.genero}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a href="/peliculas/{{this.id}}" class="btn btn-primary">Details</a>
              <button class="btn btn-primary">Add cart</button>
            </div>
          </div>
        </div>

      {{/each}}
    </div>
  {{else}}

    <h1>No Movies found!</h1>

  {{/if}}

</main>